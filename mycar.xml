<?xml version="1.0" encoding="UTF-8"?>
<project name="mycar" default="all">
  
  
  <property file="mycar.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/RXTXcomm.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.aliyun-java-sdk-core-3.3.1.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/aliyun-java-sdk-core-3.3.1.jar"/>
  </path>
  
  <path id="library.aliyun-java-sdk-dysmsapi-1.0.0.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/aliyun-java-sdk-dysmsapi-1.0.0.jar"/>
  </path>
  
  <path id="library.com.springsource.org.aopalliance-1.0.0.classpath"/>
  
  <path id="library.com.springsource.org.aopalliance-1.0.0_(2).classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/com.springsource.org.aopalliance-1.0.0.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/com.springsource.org.apache.commons.logging-1.1.1.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/com.springsource.org.apache.log4j-1.2.15.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/druid-1.0.15.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/fastjson-1.2.7.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/hamcrest-all-1.3.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.9.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-core-2.8.9.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-databind-2.8.9.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jsqlparser-1.0.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jstl-1.2.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/mybatis-3.1.1.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/mybatis-spring-1.2.3.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/mysql-connector-java-5.1.6-bin.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/pagehelper-5.1.0-beta2.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/servlet-api.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-aop-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-aspects-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-beans-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-context-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-core-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-expression-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-jdbc-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-test-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-tx-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-web-3.2.16.RELEASE.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/spring-webmvc-3.2.16.RELEASE.jar"/>
  </path>
  
  <path id="library.log4j-1.2.17.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/log4j-1.2.17.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_mycar.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mycar, clean.artifact.mycar:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mycar" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.mycar" value="${basedir}/out/artifacts/Mycar"/>
    <property name="artifact.output.mycar:war_exploded" value="${basedir}/out/artifacts/Mycar_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Mycar.war" value="${artifacts.temp.dir}/Mycar.war"/>
  </target>
  
  <target name="clean.artifact.mycar:war_exploded" description="clean Mycar:war exploded artifact output">
    <delete dir="${artifact.output.mycar:war_exploded}"/>
  </target>
  
  <target name="artifact.mycar" depends="init.artifacts, artifact.mycar:war_exploded" description="Build &#39;Mycar&#39; artifact">
    <property name="artifact.temp.output.mycar" value="${artifacts.temp.dir}/Mycar"/>
    <mkdir dir="${artifact.temp.output.mycar}"/>
    <zip destfile="${temp.jar.path.Mycar.war}">
      <zipfileset dir="${artifact.output.mycar:war_exploded}"/>
      <zipfileset dir="${basedir}/web"/>
    </zip>
    <copy file="${temp.jar.path.Mycar.war}" tofile="${artifact.temp.output.mycar}/Mycar.war"/>
  </target>
  
  <target name="artifact.mycar:war_exploded" depends="init.artifacts, compile.module.mycar" description="Build &#39;Mycar:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.mycar:war_exploded}"/>
    <mkdir dir="${artifact.output.mycar:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.mycar:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.mycar:war_exploded}/WEB-INF/classes">
      <fileset dir="${mycar.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.mycar:war_exploded}/WEB-INF/lib"/>
    <copy file="${basedir}/web/WEB-INF/lib/log4j-1.2.17.jar" tofile="${artifact.output.mycar:war_exploded}/WEB-INF/lib/log4j-1.2.17.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/aliyun-java-sdk-core-3.3.1.jar" tofile="${artifact.output.mycar:war_exploded}/WEB-INF/lib/aliyun-java-sdk-core-3.3.1.jar"/>
    <copy file="${basedir}/web/WEB-INF/lib/aliyun-java-sdk-dysmsapi-1.0.0.jar" tofile="${artifact.output.mycar:war_exploded}/WEB-INF/lib/aliyun-java-sdk-dysmsapi-1.0.0.jar"/>
    <copy todir="${artifact.output.mycar:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.mycar:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.mycar:war_exploded}/WEB-INF/web.xml"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.mycar, artifact.mycar:war_exploded" description="Build all artifacts">
    <mkdir dir="${artifact.output.mycar}"/>
    <copy todir="${artifact.output.mycar}">
      <fileset dir="${artifact.temp.output.mycar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>